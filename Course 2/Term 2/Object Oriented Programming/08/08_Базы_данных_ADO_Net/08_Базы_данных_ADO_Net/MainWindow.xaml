<Window x:Class="_08_Базы_данных_ADO_Net_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08_Базы_данных_ADO_Net_"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="Black" Height="1000">
            <Label Margin="25 25 25 0">Group</Label>
            <DataGrid x:Name="myDataGrid" IsReadOnly="True" Margin="25 25 25 0"/>

            <Label Margin="25 25 25 0">Добавить группу</Label>
            <TextBox Margin="25 25 25 0" x:Name="GroupName">

            </TextBox>
            <StackPanel Orientation="Horizontal">
                <Button Content="Группа" Margin="25 25 25 0" Click="AddGroup_Click"/>
                <Button Content="Удалить группу по id" Margin="25 25 25 0" Click="DeleteGroup_Click"/>
            </StackPanel>
            <ComboBox Margin="25 25 25 0" x:Name="GroupIdPicker">
                
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
