<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="AccentColor">White</SolidColorBrush>
    <SolidColorBrush x:Key="TextColor">Black</SolidColorBrush>
    <SolidColorBrush x:Key="MailText">#373737</SolidColorBrush>
    <SolidColorBrush x:Key="NoAccentColor">#cccccd</SolidColorBrush>
    <SolidColorBrush x:Key="BlackColor">Black</SolidColorBrush>
    
    <Style TargetType="Grid" x:Key="Window">
        <Setter Property="Background" Value="#202020" />
    </Style>

    <Style TargetType="Grid" x:Key="NavDrawer" >
        <Setter Property="Background" Value="{StaticResource NoAccentColor}"/>
    </Style>

    <Style TargetType="Grid" x:Key="Main" >
        <Setter Property="Background" Value="{StaticResource AccentColor}"/>
    </Style>

    <Style TargetType="Button" x:Key="All">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource NoAccentColor }" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>